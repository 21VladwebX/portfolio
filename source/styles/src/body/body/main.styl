.main
  background-color: rgb(19, 19, 18);
  color: rgb(89, 88, 83);
  padding: 5%;


  &__p
    margin: 1% 0 5% 0;
    font-size: 1.4em;
  &__img
    display: grid;
    height: 10%;
    grid-template-row: 10%;
    grid-template-columns: repeat(3, 300px);
    grid-columns-gap: 10px;
    justify-content: space-between;
    padding-top: 8%;
    img
      width: 100%;
      //height: 100%;

  &__btn
    text-align: center;
    padding-top: 5%;
    padding-bottom: 5%;

    &-btn
      font-size: 2em;
      font-weight: bold;
      width: 300px;
      height: 100px;
